<div class="container">  
  	{{#if token.key}}
	  
	  	{{!-- <div class="page-header">
		    <samp>Logged in as {{current_user.email}}</samp>
		</div> --}}
	{{else}}
		<div class="page-header">
		    <h3>Sign in</h3>
		</div>
		<form class="form-group" {{action 'authenticate' on='submit'}}>
			{{input value=identification class="form-control" placeholder='Login'}}<br>
			{{input value=password class="form-control" placeholder='Password' type='password'}}<br>
			<button type="submit" class="btn btn-primary btn-block" type="submit"><i class="fa fa-unlock-alt"></i> Login</button>
		</form>
	{{/if}}


{{yield}}
</div>
